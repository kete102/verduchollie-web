---
import Layout from '@/layouts/Layout.astro'
---

<Layout
	title='Sesiones - Verduchollie'
	description='Mis sesiones'
>
	<div class='relative h-screen w-full'>
		<div class='absolute left-6 top-6'>
			<a
				href='/'
				class='text-2xl font-bold text-rose-100 md:text-3xl'
				>logo</a
			>
		</div>
		<section class='flex h-full flex-col justify-evenly xl:flex-row'>
			<article
				class='flex h-full w-full items-center justify-center bg-red-400'
			>
				<a
					class='rounded-md px-2 py-1 text-3xl font-semibold uppercase tracking-tighter text-amber-100/50 transition-all hover:scale-105 hover:text-amber-100 focus:text-amber-100 md:text-3xl lg:text-4xl'
					>Fashion film</a
				>
			</article>
			<article
				class='flex h-full w-full items-center justify-center bg-red-600'
			>
				<a
					class='rounded-md px-2 py-1 text-3xl font-semibold uppercase tracking-tighter text-amber-100/50 transition-all hover:scale-105 hover:text-amber-100 focus:text-amber-100 md:text-3xl lg:text-4xl'
					>Love & Loss</a
				>
			</article>
			<article
				class='flex h-full w-full items-center justify-center bg-red-800'
			>
				<a
					class='rounded-md px-2 py-1 text-3xl font-semibold uppercase tracking-tighter text-amber-100/50 transition-all hover:scale-105 hover:text-amber-100 focus:text-amber-100 md:text-3xl lg:text-4xl'
					>La que falta</a
				>
			</article>
		</section>
	</div>
</Layout>
