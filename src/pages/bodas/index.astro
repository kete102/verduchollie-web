---
import Layout from '../../layouts/Layout.astro'
import SectionWithImg from '../../components/SectionWithImg.astro'
---

<Layout
	title='Bodas - Verduchollie'
	description='Bodas increibles'
>
	<div class='relative h-screen max-h-screen w-full'>
		<div class='absolute left-6 top-6 z-10 rounded-md bg-black/5'>
			<a
				href='/'
				class='p-2 text-2xl font-bold text-white hover:scale-110 md:text-3xl lg:text-4xl'
				>logo</a
			>
		</div>
		<div
			class='flex h-full flex-col items-center justify-center bg-zinc-600 lg:flex-row'
		>
			<SectionWithImg
				img='fondo-boda-fotos'
				title='Fotos'
				link='fotos'
				className='select-none'
			/>
			<SectionWithImg
				img='fondo-boda-videos'
				title='Videos'
				link='videos'
				className='select-none'
			/>
		</div>
	</div>
</Layout>
